# =============================================================================
# КОНФИГУРАЦИЯ ОКРУЖЕНИЯ ДЛЯ PRODUCTION
# Этот файл используется в production-окружении. НЕ ХРАНИТЕ ЗДЕСЬ СЕКРЕТЫ.
# Используйте переменные окружения сервера для реальных значений.
# =============================================================================

# Django настройки
DEBUG=False
SECRET_KEY=your-super-secret-django-key-change-this-immediately-in-production
ALLOWED_HOSTS=domen.com,www.domen.com
FRONTEND_URL=https://domen.com
DOMAIN_NAME=domen.com

# База данных PostgreSQL
DATABASE_URL=postgresql://prod_user:prod_password@db:5432/prod_db
POSTGRES_DB=prod_db
POSTGRES_USER=prod_user
POSTGRES_PASSWORD=your-strong-db-password-here
DB_HOST=db
DB_PORT=5432

# Redis и Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Google Auth
GOOGLE_OAUTH2_CLIENT_ID=your-production-google-oauth2-client-id

# Платежные системы (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key_here
STRIPE_SECRET_KEY=sk_live_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email настройки (для отправки уведомлений)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@ocgstudio.website

# OpenAI
OPENAI_API_KEY=your-production-openai-api-key

# =============================================================================
# НАСТРОЙКИ TELETHON (TELEGRAM USER-API)
# =============================================================================
TELETHON_API_ID=your-production-api-id
TELETHON_API_HASH=your-production-api-hash
TELETHON_SESSION_STRING=production_bot_session

# =============================================================================
# НАСТРОЙКИ TELEGRAM BOT API
# =============================================================================
TELEGRAM_BOT_TOKEN=your_production_bot_token_here
TELEGRAM_ADMIN_IDS=your_production_admin_ids

# SSL сертификаты (пути в системе)
SSL_CERT_PATH=/etc/letsencrypt/live/domen.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/domen.com/privkey.pem
