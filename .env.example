# =============================================================================
# КОНФИГУРАЦИЯ ДЛЯ РАЗРАБОТКИ
# Скопируйте этот файл в .env и заполните значения для локального запуска
# =============================================================================

# Django настройки
DEBUG=True
SECRET_KEY=your-secret-key-for-development
ALLOWED_HOSTS=localhost,127.0.0.1
FRONTEND_URL=http://localhost:5173

# База данных PostgreSQL
DATABASE_URL=postgresql://development:testdevelopment@db:5432/octal_assistance
POSTGRES_DB=octal_assistance
POSTGRES_USER=development
POSTGRES_PASSWORD=testdevelopment
DB_HOST=db
DB_PORT=5432

# Redis и Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Google Auth
GOOGLE_OAUTH2_CLIENT_ID=your-google-oauth2-client-id

# Платежные системы (Stripe, YooMoney)
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
YOOMONEY_TOKEN=
YOOMONEY_RECEIVER=
YOOMONEY_WEBHOOK_SECRET=

# Email (для разработки используется вывод в консоль)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USE_TLS=
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# =============================================================================
# НАСТРОЙКИ TELETHON (TELEGRAM USER-API)
# Для эмуляции человеческого поведения. Получите на my.telegram.org/apps
# =============================================================================
TELETHON_API_ID=your-api-id
TELETHON_API_HASH=your-api-hash
TELETHON_SESSION_STRING=bot_session

# =============================================================================
# НАСТРОЙКИ TELEGRAM BOT API
# =============================================================================
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ADMIN_IDS=123456789,987654321
