# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ADMIN_IDS=123456789,987654321  # Через запятую ID администраторов

# Telethon настройки для эмуляции человеческого поведения
# Получите API_ID и API_HASH на https://my.telegram.org/apps
TELETHON_API_ID=your_api_id_here
TELETHON_API_HASH=your_api_hash_here
TELETHON_SESSION_STRING=bot_session

# Настройки задержек (в секундах)
MIN_RESPONSE_DELAY=60    # минимум 1 минута
MAX_RESPONSE_DELAY=180   # максимум 3 минуты
TYPING_DELAY_MIN=5       # минимальная задержка печатания
TYPING_DELAY_MAX=15      # максимальная задержка печатания

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/telegram_bot_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=telegram_bot_db
DB_USER=username
DB_PASSWORD=password

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# GPT Service Settings
DEFAULT_MODEL=gpt-4
USE_PROXY=False
PROXY_URL=http://95.164.200.12:9459

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=10
MAX_MESSAGE_LENGTH=4000
